{
    "compilerOptions": {
      "target": "es2022",                       /* Atur target ECMAScript. es2022 cocok untuk Node.js modern */
      "module": "commonjs",                     /* Atur sistem modul. commonjs untuk Node.js*/
      "rootDir": "./src",                       /* Direktori root file sumber */
      "outDir": "./dist",                       /* Direktori output untuk file kompilasi */
      "esModuleInterop": true,                  /* Penting untuk import/export CommonJS dan ES Modules */
      "forceConsistentCasingInFileNames": true, /* Pastikan konsistensi casing nama file */
      "strict": true,                           /* Aktifkan semua opsi strict type-checking */
      "skipLibCheck": true,                     /* Lewati pemeriksaan tipe untuk file .d.ts library (bisa membantu menghindari konflik, tapi idealnya false di produksi) */
      "lib": ["es2022"],                        /* Library yang disertakan (misalnya, Promise, Array.prototype.map) */
      "types": ["node", "express"],             /* Pastikan 'node' dan 'express' ada di sini */
      "resolveJsonModule": true,                /* Izinkan import file JSON */
      "moduleResolution": "node"                /* Strategi resolusi modul. 'node' untuk Node.js */
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"], /* Sertakan semua file .ts dan .d.ts di src/ */
    "exclude": ["node_modules", "dist"]         /* Kecualikan folder ini */
  }